@model EmployeeManagement.Models.RegisterViewModel
@{
    Layout = "_AuthLayout";  // Use custom layout
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:100vh;">
    <div class="card shadow-lg p-4 rounded-3" style="max-width: 450px; width:100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Create Account</h3>
            <p class="text-muted">Fill in the form to register</p>
        </div>

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label fw-semibold"></label>
                <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button class="btn btn-primary fw-bold" type="submit">Register</button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <p class="mb-0">
                Already have an account?
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login here</a>
            </p>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Dashboard";
    // Example notice list - replace with model or dynamic data if needed
    var notices = new[] {
        "Welcome to the Employee Management System.",
        "Office will be closed on October 15th for a public holiday.",
        "Monthly performance reviews are due by October 10th."
    };
}
<style>
    .dashboard-bg {
        position: relative;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
    }

        .dashboard-bg img.bg-img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            z-index: 1;
            filter: brightness(0.7);
        }

    .notice-board-panel {
        position: absolute;
        top: 10%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        background: rgba(255,255,255,0.85);
        padding: 2rem 2.5rem;
        border-radius: 1rem;
        min-width: 300px;
        max-width: 90vw;
        box-shadow: 0 8px 32px rgba(0,0,0,0.18);
        text-align: left;
    }

        .notice-board-panel h3 {
            color: #FF6B35;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .notice-board-panel ul {
            margin-bottom: 0;
            padding-left: 0;
            list-style: none;
        }

            .notice-board-panel ul li {
                padding: 0.7rem 0;
                border-bottom: 1px solid #ffe0c2;
                color: #2D2D2D;
            }

                .notice-board-panel ul li:last-child {
                    border-bottom: none;
                }
     
</style>

<div class="dashboard-bg">
    <img class="bg-img" src="~/Images/employee.jpg" alt="Dashboard Background" />
    <div class="notice-board-panel">
        <h3><i class="bi bi-megaphone"></i> Notice Board</h3>
        <ul>
            @foreach (var notice in notices)
            {
                <li>@notice</li>
            }
        </ul>
    </div>
</div>
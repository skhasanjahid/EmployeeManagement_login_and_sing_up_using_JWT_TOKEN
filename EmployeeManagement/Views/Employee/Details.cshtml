@model EmployeeManagement.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}

<style>
    body {
        background: #f8f9fa;
    }

    .card {
        border-radius: 12px;
    }

    .form-control[readonly] {
        background-color: #fff;
        border: 1px solid #dee2e6;
        font-weight: 500;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h3 class="text-center text-primary mb-4">Employee Details</h3>

                <form>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Name</label>
                        <input type="text" class="form-control" value="@Model.Name" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Position</label>
                        <input type="text" class="form-control" value="@Model.Position" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Salary</label>
                        <input type="text" class="form-control" value="@Model.Salary" readonly />
                    </div>

                    <div class="text-center mt-4">
                        <a class="btn btn-secondary px-4" asp-action="Index">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light" style="min-height:100vh; display:flex; flex-direction:column;">

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a style="text-align: center" class="navbar-brand" href="#">EMS WELCOME TO EMPLOYEE MANAGEMENT SYSTEM</a>
            <div class="d-flex ms-auto">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <span class="navbar-text me-2">Welcome, @User.Identity.Name</span>
                    <a class="btn btn-outline-secondary me-2" asp-controller="Auth" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-primary me-2" asp-controller="Auth" asp-action="Login">Login</a>
                    <a class="btn btn-success" asp-controller="Auth" asp-action="Register">Register</a>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container d-flex align-items-center justify-content-center flex-grow-1" style="min-height: calc(100vh - 70px);">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
